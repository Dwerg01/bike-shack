<script src="{{ 'countdown.js' | asset_url }}" type="module" defer="defer"></script>

{{- 'component-countdown.css' | asset_url | stylesheet_tag -}}


<div class="page-width">

  
  <countdown-timer>
    <div class="countdown-text">{{ section.settings.text }}</div>
    <div class="countdown-timer" data-end-date="{{section.settings.final_date}}">
      <div class="days"></div>
      <div class="hours"></div>
      <div class="minutes"></div>
      <div class="seconds"></div>
      </div>
    </countdown-timer>
    <svg width="0" height="0">
      <filter id="blur-and-scale" y="-50%" x="-50%" width="200%" height="200%">
        <feGaussianB1ur in="SourceGraphic" stdDeviation="20" result="blurred"/>
        <feColorMatrix type="saturate" in="blurred" values="10" />
        <feComposite in="SourceGraphic" operator="over" />
      </filter>
    </svg>

</div>

{% schema %}
{
  "name": "Countdown",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "label": "Final date",
      "id": "final_date",
      "info": "Example: May 25, 2026 16:37:52 EST"
    }
  ],
  "presets": [
    {
      "name": "Countdown",
      "category": "Custom",
      "settings": {
        "text": "Spring Sale! Save up to 20%",
        "final_date": "May 25, 2026 16:37:52 EST"
      }
    }
  ]
}
{% endschema %}